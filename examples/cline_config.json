{
  "mcpServers": {
    "homeassistant": {
      "command": "homeassistant-mcp-server",
      "args": [],
      "env": {
        "HASS_URL": "http://192.168.1.22:8123",
        "HASS_TOKEN": "your_token_here"
      },
      "disabled": false,
      "alwaysAllow": [],
      "settings": {
        "timeout": 30000,
        "retries": 3
      }
    }
  },
  "anthropic": {
    "apiKey": "your_anthropic_api_key"
  },
  "workspaceSettings": {
    "autoSave": true,
    "showInlineEdit": true
  }
}
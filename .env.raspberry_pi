# Home Assistant MCP Server Configuration for Raspberry Pi
# Copy this file to .env and configure your values

# ============================================================================
# Home Assistant Configuration
# ============================================================================

# Home Assistant URL (use localhost when running on the same Pi)
HASS_URL=http://localhost:8123

# Home Assistant Long-lived Access Token
# Get this from: Home Assistant > Profile > Long-lived access tokens
HASS_TOKEN=your_token_here

# ============================================================================
# MCP Server Configuration
# ============================================================================

# Server bind address (0.0.0.0 allows external connections)
MCP_SERVER_HOST=0.0.0.0

# Server port (make sure this port is available)
MCP_SERVER_PORT=3000

# Server timeout in seconds
MCP_SERVER_TIMEOUT=30

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional, logs will go to systemd journal if not set)
LOG_FILE=/var/log/homeassistant-mcp-server.log

# Enable detailed request logging (for debugging)
LOG_REQUESTS=false

# ============================================================================
# Performance Configuration
# ============================================================================

# Maximum number of concurrent connections
MAX_CONNECTIONS=10

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Enable connection pooling for better performance
CONNECTION_POOLING=true

# ============================================================================
# Security Configuration
# ============================================================================

# Allowed client IPs (comma-separated, empty means allow all)
# Example: ALLOWED_IPS=192.168.1.100,192.168.1.101
ALLOWED_IPS=

# Enable CORS for web clients
ENABLE_CORS=true

# CORS allowed origins (comma-separated)
CORS_ORIGINS=*

# ============================================================================
# Feature Flags
# ============================================================================

# Enable automation generation tools
ENABLE_AUTOMATIONS=true

# Enable historical data access
ENABLE_HISTORY=true

# Enable service calls (required for device control)
ENABLE_SERVICE_CALLS=true

# Cache entity states for better performance
ENABLE_CACHING=true

# Cache duration in seconds
CACHE_DURATION=30

# ============================================================================
# Development Configuration (for testing)
# ============================================================================

# Enable development mode (more verbose logging)
DEV_MODE=false

# Enable debug endpoints
DEBUG_ENDPOINTS=false

# Mock Home Assistant (for testing without HA)
MOCK_HOMEASSISTANT=false